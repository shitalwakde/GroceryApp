<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="310dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:id="@+id/cardView"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="150dp"
        android:layout_height="310dp"
        android:paddingBottom="5dp">
        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_best"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/background_login"/>

            <RelativeLayout
                android:id="@+id/rl_discount"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circle_red">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/txtDiscountOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorWhite"
                        android:paddingTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:text="0%"/>
                    <TextView
                        android:layout_below="@+id/txtDiscountOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorWhite"
                        android:layout_centerHorizontal="true"
                        android:text="off"
                        android:layout_marginBottom="5dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/iv_unwish"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_arrival_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Winter Offer"
                    android:background="@drawable/bg_offer"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/roboto"
                    android:textSize="13sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/rl_image">

            <TextView
                android:id="@+id/tv_pr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Nutella"/>

            <TextView
                android:id="@+id/tv_pr_sub_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="11sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_below="@+id/tv_pr_name"
                android:fontFamily="@font/roboto"
                android:text="HazeInut Spread with Cocoa"/>

            <RelativeLayout
                android:id="@+id/rl_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_below="@+id/tv_pr_sub_name">

                <RelativeLayout
                    android:id="@+id/rl_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/purpletrans"
                    android:padding="1dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_star"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="2dp"
                        android:fontFamily="@font/roboto"
                        android:text="4.3"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="11sp" />
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="2dp"
                        android:paddingTop="3dp"
                        android:layout_toRightOf="@+id/tv_star"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/ic_star"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/roboto"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/rl_star"
                    android:textSize="11sp"
                    android:text="7 Rating"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_rating"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvPiece"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/roboto"
                    android:layout_centerHorizontal="true"
                    android:textSize="11sp"
                    android:text="7 Rating"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/rl_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/tv_peice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="9dp"
                        android:fontFamily="@font/roboto"
                        android:layout_marginRight="1dp"
                        android:text="1 Kg"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toRightOf="@+id/tv_peice"
                        android:src="@drawable/ic_down"
                        android:tint="@color/colorPrimaryDark"
                        android:visibility="visible"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_quantity"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/tv_discount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/colorBlack"
                    android:text="Rs 550"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/roboto"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_discount_price"
                    android:textSize="11sp"
                    android:text="Rs 1550"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_addCartContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_price"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/add_button"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/roboto"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:text="ADD"
                    android:textSize="12dp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_notify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_border"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/roboto"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:text="Notify Me"
                    android:textSize="12dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/ll_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_button"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_minus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/add_button"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/add_button"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/add_button"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/rl_addCartContainer"
                android:visibility="gone"/>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_outOfStock"
        android:layout_width="160dp"
        android:layout_height="310dp"
        android:paddingBottom="10dp"
        android:background="@color/colorTrans"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_trans">
            <ImageView
                android:id="@+id/iv_outOfStock"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/outodstock"/>
        </RelativeLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_border"
            android:padding="10dp"
            android:text="Notify me"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/rl_send_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@color/colorWhite"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_close"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvEmail"
                android:layout_below="@+id/iv_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_notify_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_light"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_send_notify"
                android:layout_below="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_pending"
                android:textColor="@color/colorWhite"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:text="Notify"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>