<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_orderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OrderId"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/roboto" />
            <TextView
                android:id="@+id/tv_deliveryDate"
                android:layout_below="@+id/tv_orderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OrderId"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:id="@+id/ll_status"
                android:layout_below="@+id/tv_deliveryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_border"
                android:padding="10dp"
                android:layout_margin="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Status :    "
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_orderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OrderId"
                    android:textSize="12sp"
                    android:textColor="@color/border"
                    android:gravity="right"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_view"
                android:layout_below="@+id/ll_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Amount"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment Status"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_orderAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\u20B9 5,764"
                        android:textSize="12sp"
                        android:gravity="right"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/roboto"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/tv_payment_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OrderId"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:fontFamily="@font/roboto" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/bottom_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/head"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/roboto"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@drawable/add_button"
                    android:text="Cancel"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_reorder"
                    android:layout_width="60dp"
                    android:layout_height="23dp"
                    android:textSize="@dimen/head"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/roboto"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:background="@drawable/add_button"
                    android:text="Re-order"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/add_button"
                    android:padding="7dp"
                    android:src="@drawable/ic_close_white"
                    android:visibility="gone"/>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>