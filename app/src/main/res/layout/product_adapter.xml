<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/rl_trending_view"
    android:layout_marginBottom="1dp"
    android:padding="5dp"
    android:background="@drawable/bg_arrival"
    android:layout_height="155dp">

    <RelativeLayout
        android:id="@+id/rl_wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_unwish"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_heart_red" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_best"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:padding="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/background_login"/>

        <RelativeLayout
            android:id="@+id/rl_discount"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_red">

            <TextView
                android:id="@+id/txtDiscountOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/head"
                android:fontFamily="@font/roboto"
                android:layout_centerInParent="true"
                android:textColor="@color/colorBlack"
                android:text="0%"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_arrival_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Winter Offer"
                android:background="@drawable/bg_offer"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/roboto"
                android:textSize="13sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/rl_image">

        <TextView
            android:id="@+id/tv_pr_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:text="Nutella"/>

        <TextView
            android:id="@+id/tv_pr_sub_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pr_name"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/roboto"
            android:text="HazeInut Spread with Cocoa"
            android:textSize="11sp" />

        <RelativeLayout
            android:id="@+id/rl_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_pr_sub_name">

            <RelativeLayout
                android:id="@+id/rl_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/greentrans"
                android:padding="1dp">

                <TextView
                    android:id="@+id/tv_star"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="2dp"
                    android:fontFamily="@font/roboto"
                    android:text="4.3"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11sp" />
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="2dp"
                    android:paddingTop="3dp"
                    android:layout_toRightOf="@+id/tv_star"
                    android:src="@drawable/ic_star"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:fontFamily="@font/roboto"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/rl_star"
                android:textSize="11sp"
                android:text="7 Rating"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_rating"
            android:background="@drawable/bg_border"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tv_peice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="9dp"
                android:fontFamily="@font/roboto"
                android:layout_marginRight="1dp"
                android:text="1 Kg"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toRightOf="@+id/tv_peice"
                android:src="@drawable/ic_down"
                android:visibility="visible"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/rl_weight">

            <TextView
                android:id="@+id/tv_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorBlack"
                android:text="Rs 550"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:fontFamily="@font/roboto"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_discount_price"
                android:textSize="11sp"
                android:text="Rs 1550"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/rl_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp">
            <RelativeLayout
                android:id="@+id/rl_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:background="@drawable/add_button"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/roboto"
                    android:text="Add To Cart"
                    android:textSize="10dp"
                    android:visibility="visible"/>
                <LinearLayout
                    android:id="@+id/ll_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_button"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_minus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/add_button"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/add_button"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/add_button"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_remove"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/rl_quantity"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_border"
                android:fontFamily="@font/roboto"
                android:paddingLeft="20dp"
                android:paddingTop="7.7dp"
                android:paddingRight="10dp"
                android:paddingBottom="7.7dp"
                android:text="Remove"
                android:textSize="10dp"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>