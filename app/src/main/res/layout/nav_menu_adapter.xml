<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activies.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nma_ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="3dp"
                    android:src="@drawable/ic_heart"/>

                <TextView
                    android:id="@+id/nma_tv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Menu"
                    android:fontFamily="@font/roboto"
                    android:layout_toRightOf="@+id/iv_menu"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_forword_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="3dp"
                    android:rotation="90"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_forword_arrow"/>

                <ImageView
                    android:id="@+id/iv_up_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_forword_arrow"/>

                <ImageView
                    android:id="@+id/iv_down_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="3dp"
                    android:rotation="180"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_forword_arrow"/>

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:background="@color/border"
                android:visibility="gone"
                android:layout_height="1dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llBelowMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBlack"/>
            <TextView
                android:id="@+id/tvDiscountProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discount Products"
                android:padding="10dp"
                android:textSize="11sp"
                android:fontFamily="@font/roboto_medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBlack"/>
            <TextView
                android:id="@+id/tvspecialoffers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Special Offers Products"
                android:padding="10dp"
                android:textSize="11sp"
                android:fontFamily="@font/roboto_medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBlack"/>
            <TextView
                android:id="@+id/tvslab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discount Slabs"
                android:padding="5dp"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBlack"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</layout>
