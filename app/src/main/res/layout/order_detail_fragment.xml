<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_green_border"
                    android:padding="10dp"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Amount"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 2018"
                            android:gravity="right"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/colorBlack"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delivery Date"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="28 Jun 2020"
                            android:gravity="right"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:layout_marginBottom="50dp"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Status"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/colorBlack"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Placed"
                            android:gravity="right"
                            android:textSize="13sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/roboto"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery Address"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Albert Jhon, Indira nagar, Nagpur, 440022"
                        android:fontFamily="@font/roboto_light"
                        android:layout_weight="1"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tracking Summary"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Date"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="27 Jun 2020"
                            android:gravity="right"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delivery Date"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="28 Jun 2020"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment Information"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Purchase Amount"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 2000"
                            android:gravity="right"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delivery Charge"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 18"
                            android:gravity="right"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 2018"
                            android:gravity="right"
                            android:textSize="12sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Type"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cash on delivery"
                            android:gravity="right"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Summary"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_order_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/tv_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CONTINUE SHOPPING"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/submit"
        android:visibility="gone"/>
</RelativeLayout>